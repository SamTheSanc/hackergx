{
    "name": "Hackers",
    "description": "an Opera GX mod based on the Tricker Arts game",
    "version": "0.1",
    "developer":
    {
        "name": "samthesanc"
    },
    "icons":
    {
        "512": "icon_512.png"
    },
    "manifest_version": 3,
    "mod":
    {
        "license": "license.txt",
        "payload":
        {
            "background_music":
            [
                "music/layer1.mp3",
                "music/layer2.mp3",
                "music/layer3.mp3"
            ],
            "keyboard_sounds":
            {
                "TYPING_LETTER":
                [
                    "sounds/keyboard1.wav",
                    "sounds/keyboard8.wav",
                    "sounds/keyboard2.wav",
                    "sounds/keyboard7.wav",
                    "sounds/keyboard3.wav",
                    "sounds/keyboard6.wav",
                    "sounds/keyboard4.wav",
                    "sounds/keyboard5.wav"
                ],
                "TYPING_ENTER":
                [
                    "sounds/spacebar.wav"
                ],
                "TYPING_SPACE":
                [
                    "sounds/spacebar.wav"
                ],
                "TYPING_BACKSPACE":
                [
                    "sounds/backspace.wav"
                ]
            },
            "browser_sounds":
            {
                "SWITCH_TOGGLE":
                [
                    "sounds/FeatureSwitchON.mp3"
                ],
                "TAB_CLOSE":
                [
                    "sounds/CloseTab.mp3"
                ],
                "TAB_INSERT":
                [
                    "sounds/NewTab.mp3"
                ],
                "HOVER":
                [
                    "sounds/Hover.mp3"
                ],
                "HOVER_UP":
                [
                    "sounds/Hover.mp3"
                ],
                "CLICK":
                [
                    "sounds/spacebar.wav"
                ],
                "LIMITER_ON":
                [
                    "sounds/FeatureSwitchON.mp3"
                ],
                "LIMITER_OFF":
                [
                    "sounds/FeatureSwitchOFF.mp3"
                ],
                "IMPORTANT_CLICK":
                [
                    ""
                ],
                "FEATURE_SWITCH_ON":
                [
                    "sounds/FeatureSwitchON.mp3"
                ],
                "FEATURE_SWITCH_OFF":
                [
                    "sounds/FeatureSwitchOFF.mp3"
                ],
                "LEVEL_UPGRADE":
                [
                    ""
                ],
                "TAB_SLASH":
                [
                    ""
                ]
            },
            "page_styles":
            [
                {
                    "css":
                    [
                        "webmodding/opera.css"
                    ],
                    "matches":
                    [
                        "https://*.opera.com/*"
                    ]
                }
            ],
            "shaders":
            {
                "Matrix green":
                {
                    "path": "shader/matrix.txt"
                },
                "Wave":
                {
                    "animation":
                    {
                        "duration": 60,
                        "steps": 3600
                    },
                    "path": "shader/wave.txt"
                }
            },
            "theme":
            {
                "dark":
                {
                    "gx_accent":
                    {
                        "h": 60,
                        "s": 100,
                        "l": 50
                    },
                    "gx_secondary_base":
                    {
                        "h": 0,
                        "s": 0,
                        "l": 16
                    }
                },
                "light":
                {
                    "gx_accent":
                    {
                        "h": 60,
                        "s": 100,
                        "l": 50
                    },
                    "gx_secondary_base":
                    {
                        "h": 60,
                        "s": 100,
                        "l": 88
                    }
                }
            },
            "wallpaper":
            {
                "dark":
                {   
                    "image": "wallpaper/dark.png",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#757575"
                },
                "light":
                {
                    "image": "wallpaper/video.webm",
                    "first_frame": "wallpaper/first_frame.jpeg",
                    "text_color": "#FFFFFF",
                    "text_shadow": "#0B000E"
                }
            }
        },
        "schema_version": 1
    }
}
